    <Grid Margin="22" RowDefinitions="Auto,*">
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="560"
                Height="340"
                Margin="-120,-160,0,0"
                IsHitTestVisible="False"
                CornerRadius="300"
                Opacity="0.55">
            <Border.Background>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="75%" RadiusY="75%">
                    <GradientStop Color="#FF2A67B8" Offset="0" />
                    <GradientStop Color="#00307AD8" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Width="620"
                Height="360"
                Margin="0,0,-130,-180"
                IsHitTestVisible="False"
                CornerRadius="320"
                Opacity="0.45">
            <Border.Background>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="80%" RadiusY="80%">
                    <GradientStop Color="#FF1FA88F" Offset="0" />
                    <GradientStop Color="#0025CFAE" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>

        <Border Grid.Row="0"
                Background="#8810182A"
                BorderBrush="#AA3A5788"
                BorderThickness="1"
                CornerRadius="20"
                Padding="22"
                Margin="0,0,0,16"
                BoxShadow="0 20 60 0 #66000000">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="20">
                <StackPanel Spacing="6">
                    <TextBlock Text="Bacpac GUI"
                               FontSize="34"
                               FontWeight="Bold"
                               Foreground="#FFF8FAFF" />
                    <TextBlock Text="Fast SQL bacpac backup and restore with guided workflows"
                               FontSize="14"
                               Foreground="#FFB7C6EA" />
                </StackPanel>

                <Border Grid.Column="1"
                        VerticalAlignment="Center"
                        CornerRadius="999"
                        Padding="12,6"
                        BorderThickness="1"
                        BorderBrush="#FF55D8BB"
                        Background="#3324B495">
                    <TextBlock Text="In-Process DacFx"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#FF93FFE7" />
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="#7A111A2F"
                BorderBrush="#AA38598E"
                BorderThickness="1"
                CornerRadius="22"
                Padding="18"
                BoxShadow="0 24 70 0 #66000000">
            <TabControl>
                <TabItem Header="Backup">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
                              ColumnDefinitions="Auto,*"
                              RowSpacing="14"
                              ColumnSpacing="14"
                              Margin="8">
                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Input Mode" FontWeight="SemiBold" />
                            <CheckBox Grid.Row="0"
                                      Grid.Column="1"
                                      Classes="modeToggle"
                                      Content="Use full connection string"
                                      IsChecked="{Binding Backup.UseConnectionStringMode, Mode=TwoWay}"
                                      Foreground="#FFE3EBFF" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Text="Connection String"
                                       FontWeight="SemiBold"
                                       IsVisible="{Binding Backup.IsConnectionStringMode}" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     MinHeight="36"
                                     Text="{Binding Backup.ConnectionString, Mode=TwoWay}"
                                     Watermark="Server=...;Database=...;User Id=...;Password=...;TrustServerCertificate=True;"
                                     IsVisible="{Binding Backup.IsConnectionStringMode}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="SQL Server" FontWeight="SemiBold" IsVisible="{Binding Backup.IsManualMode}" />
                            <ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      MinHeight="36"
                                      IsEditable="True"
                                      Text="{Binding Backup.Server, Mode=TwoWay}"
                                      ItemsSource="{Binding Backup.RecentServers}"
                                      PlaceholderText="localhost,1433 or myserver.database.windows.net"
                                      IsVisible="{Binding Backup.IsManualMode}" />

                            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Username" FontWeight="SemiBold" IsVisible="{Binding Backup.IsManualMode}" />
                            <TextBox Grid.Row="3" Grid.Column="1" MinHeight="36" Text="{Binding Backup.Username, Mode=TwoWay}" Watermark="sql_login" IsVisible="{Binding Backup.IsManualMode}" />

                            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Password" FontWeight="SemiBold" IsVisible="{Binding Backup.IsManualMode}" />
                            <TextBox Grid.Row="4" Grid.Column="1" MinHeight="36" PasswordChar="*" Text="{Binding Backup.Password, Mode=TwoWay}" Watermark="password" IsVisible="{Binding Backup.IsManualMode}" />

                            <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Database" FontWeight="SemiBold" IsVisible="{Binding Backup.IsManualMode}" />
                            <Grid Grid.Row="5" Grid.Column="1" ColumnDefinitions="*,Auto" ColumnSpacing="10" IsVisible="{Binding Backup.IsManualMode}">
                                <ComboBox Grid.Column="0" MinHeight="36" ItemsSource="{Binding Backup.Databases}" SelectedItem="{Binding Backup.SelectedDatabase, Mode=TwoWay}" PlaceholderText="Load databases first" />
                                <Button Grid.Column="1" MinWidth="140" Classes="secondary" Content="Load Databases" Command="{Binding Backup.LoadDatabasesCommand}" />
                            </Grid>

                            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Output File" FontWeight="SemiBold" />
                            <Grid Grid.Row="6" Grid.Column="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <TextBox Grid.Column="0" MinHeight="36" Text="{Binding Backup.OutputPath, Mode=TwoWay}" Watermark="/path/to/backup.bacpac" />
                                <Button Grid.Column="1" Classes="icon" Command="{Binding Backup.BrowseOutputPathCommand}" ToolTip.Tip="Choose folder and auto-generate output filename">
                                    <TextBlock Text="ðŸ“" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Button>
                            </Grid>

                            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                <Button Content="Test Connection" MinWidth="140" Classes="secondary" Command="{Binding Backup.TestConnectionCommand}" />
                                <Button Content="Start Backup" MinWidth="130" Classes="primary startAction" Command="{Binding Backup.StartBackupCommand}" />
                                <Button Content="Cancel" MinWidth="90" Classes="neutral" Command="{Binding Backup.CancelBackupCommand}" IsVisible="{Binding Backup.IsRunning}" />
                                <Border Classes="statusChip" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Backup.StatusMessage}" FontWeight="SemiBold" Foreground="#FFCBE0FF" />
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="8" Grid.Column="1" Spacing="6" IsVisible="{Binding Backup.IsRunning}">
                                <ProgressBar Height="8"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding Backup.OperationProgressPercent}"
                                             IsIndeterminate="{Binding Backup.IsOperationProgressIndeterminate}" />
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="{Binding Backup.OperationProgressStep}"
                                               Foreground="#FF9FB8E0"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Backup.OperationProgressPercent, StringFormat={}{0:0.0}%}"
                                               Foreground="#FFBDD4F7"
                                               FontSize="11"
                                               FontWeight="SemiBold" />
                                </Grid>
                            </StackPanel>

                            <Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="{Binding Backup.ShowBackupCompletedBanner}" Background="#2C2DBA7D" BorderBrush="#FF48E0AF" BorderThickness="1" CornerRadius="12" Padding="14,12">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                    <TextBlock Text="âœ“" FontSize="26" FontWeight="Bold" Foreground="#FF81FFD3" VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="Backup Complete" FontSize="17" FontWeight="Bold" Foreground="#FFD7FFE9" />
                                        <TextBlock Text="{Binding Backup.CompletionMessage}" Foreground="#FFB6F7DC" TextWrapping="Wrap" />
                                        <Button Content="Open Output Folder" Margin="0,8,0,0" HorizontalAlignment="Left" Classes="secondary compact" Command="{Binding Backup.OpenOutputFolderCommand}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" CornerRadius="12" Padding="12" BorderBrush="#FF3D5E92" Background="#660F182D">
                                <Grid RowDefinitions="Auto,*" RowSpacing="8">
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
                                        <TextBlock Text="Live Operation Log" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FFCEE1FF" />
                                        <Button Grid.Column="1" Content="Open Folder" Classes="secondary compact" Command="{Binding Backup.OpenOutputFolderCommand}" />
                                        <Button Grid.Column="2" Content="Copy" Classes="secondary compact" Command="{Binding Backup.CopyLogsCommand}" />
                                        <Button Grid.Column="3" Content="Clear" Classes="neutral compact" Command="{Binding Backup.ClearLogsCommand}" />
                                    </Grid>
                                    <TextBox Grid.Row="1" Height="210" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Backup.LogOutput}" behaviors:TextBoxAutoScrollBehavior.AutoScrollToEnd="True" />
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Restore">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*"
                              ColumnDefinitions="Auto,*"
                              RowSpacing="14"
                              ColumnSpacing="14"
                              Margin="8">
                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Bacpac File" FontWeight="SemiBold" />
                            <Grid Grid.Row="0" Grid.Column="1" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                <ComboBox Grid.Column="0"
                                          MinHeight="36"
                                          IsEditable="True"
                                          Text="{Binding Restore.BacpacPath, Mode=TwoWay}"
                                          ItemsSource="{Binding Restore.RecentBacpacFiles}"
                                          PlaceholderText="/path/to/backup.bacpac" />
                                <Button Grid.Column="1" Classes="icon" Command="{Binding Restore.BrowseBacpacPathCommand}" ToolTip.Tip="Choose bacpac file">
                                    <TextBlock Text="ðŸ“„" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Button>
                                <Button Grid.Column="2" MinWidth="92" Classes="secondary compact" Content="Preview" Command="{Binding Restore.PreviewBacpacCommand}" />
                            </Grid>

                            <Border Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    IsVisible="{Binding Restore.ShowPreviewPanel}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="12"
                                    BorderBrush="#FF3D5E92"
                                    Background="#660F182D">
                                <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                                    <TextBlock Grid.Row="0"
                                               Text="Bacpac Preview"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#FFD7E8FF" />
                                    <TextBlock Grid.Row="0"
                                               HorizontalAlignment="Right"
                                               Text="Analyzing..."
                                               IsVisible="{Binding Restore.IsPreviewLoading}"
                                               Foreground="#FF9DC3FF"
                                               FontStyle="Italic" />
                                    <Grid Grid.Row="1" ColumnDefinitions="2*,*,*,*,*" ColumnSpacing="12" IsVisible="{Binding Restore.HasPreview}">
                                        <StackPanel Grid.Column="0" Spacing="2">
                                            <TextBlock Text="Suggested DB" FontSize="11" Foreground="#FF9FB4D9" />
                                            <TextBlock Text="{Binding Restore.PreviewDatabaseName}" FontWeight="SemiBold" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="File Size" FontSize="11" Foreground="#FF9FB4D9" />
                                            <TextBlock Text="{Binding Restore.PreviewFileSize}" FontWeight="SemiBold" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Spacing="2">
                                            <TextBlock Text="Tables" FontSize="11" Foreground="#FF9FB4D9" />
                                            <TextBlock Text="{Binding Restore.PreviewTableCount}" FontWeight="SemiBold" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="3" Spacing="2">
                                            <TextBlock Text="Views" FontSize="11" Foreground="#FF9FB4D9" />
                                            <TextBlock Text="{Binding Restore.PreviewViewCount}" FontWeight="SemiBold" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="4" Spacing="2">
                                            <TextBlock Text="Procedures" FontSize="11" Foreground="#FF9FB4D9" />
                                            <TextBlock Text="{Binding Restore.PreviewProcedureCount}" FontWeight="SemiBold" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="SQL Server" FontWeight="SemiBold" />
                            <ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      MinHeight="36"
                                      IsEditable="True"
                                      Text="{Binding Restore.Server, Mode=TwoWay}"
                                      ItemsSource="{Binding Restore.RecentServers}"
                                      PlaceholderText="localhost,1433 or myserver.database.windows.net" />

                            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Username" FontWeight="SemiBold" />
                            <TextBox Grid.Row="3" Grid.Column="1" MinHeight="36" Text="{Binding Restore.Username, Mode=TwoWay}" Watermark="sql_login" />

                            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Password" FontWeight="SemiBold" />
                            <TextBox Grid.Row="4" Grid.Column="1" MinHeight="36" PasswordChar="*" Text="{Binding Restore.Password, Mode=TwoWay}" Watermark="password" />

                            <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Target Mode" FontWeight="SemiBold" />
                            <CheckBox Grid.Row="5" Grid.Column="1" Classes="modeToggle" Content="Create a new database" IsChecked="{Binding Restore.CreateNewDatabase, Mode=TwoWay}" Foreground="#FFE3EBFF" />

                            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" IsVisible="{Binding Restore.IsExistingDatabaseMode}" Text="Existing DB" FontWeight="SemiBold" />
                            <Grid Grid.Row="6" Grid.Column="1" IsVisible="{Binding Restore.IsExistingDatabaseMode}" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                                <ComboBox Grid.Column="0" MinHeight="36" ItemsSource="{Binding Restore.Databases}" SelectedItem="{Binding Restore.SelectedDatabase, Mode=TwoWay}" PlaceholderText="Load databases first" />
                                <Button Grid.Column="1" MinWidth="140" Classes="secondary" Content="Load Databases" Command="{Binding Restore.LoadDatabasesCommand}" />
                            </Grid>

                            <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" IsVisible="{Binding Restore.CreateNewDatabase}" Text="New DB Name" FontWeight="SemiBold" />
                            <TextBox Grid.Row="7" Grid.Column="1" IsVisible="{Binding Restore.CreateNewDatabase}" MinHeight="36" Text="{Binding Restore.NewDatabaseName, Mode=TwoWay}" Watermark="my_restored_database" />

                            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                <Button Content="Test Connection" MinWidth="140" Classes="secondary" Command="{Binding Restore.TestConnectionCommand}" />
                                <Button Content="Start Restore" MinWidth="130" Classes="primary startAction" Command="{Binding Restore.StartRestoreCommand}" />
                                <Button Content="Cancel" MinWidth="90" Classes="neutral" Command="{Binding Restore.CancelRestoreCommand}" IsVisible="{Binding Restore.IsRunning}" />
                                <Border Classes="statusChip" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Restore.StatusMessage}" FontWeight="SemiBold" Foreground="#FFCBE0FF" />
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="9" Grid.Column="1" Spacing="6" IsVisible="{Binding Restore.IsRunning}">
                                <ProgressBar Height="8"
                                             Minimum="0"
                                             Maximum="100"
                                             Value="{Binding Restore.OperationProgressPercent}"
                                             IsIndeterminate="{Binding Restore.IsOperationProgressIndeterminate}" />
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="{Binding Restore.OperationProgressStep}"
                                               Foreground="#FF9FB8E0"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Restore.OperationProgressPercent, StringFormat={}{0:0.0}%}"
                                               Foreground="#FFBDD4F7"
                                               FontSize="11"
                                               FontWeight="SemiBold" />
                                </Grid>
                            </StackPanel>

                            <Border Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" IsVisible="{Binding Restore.ShowRestoreCompletedBanner}" Background="#2C2DBA7D" BorderBrush="#FF48E0AF" BorderThickness="1" CornerRadius="12" Padding="14,12">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                    <TextBlock Text="âœ“" FontSize="26" FontWeight="Bold" Foreground="#FF81FFD3" VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="Restore Complete" FontSize="17" FontWeight="Bold" Foreground="#FFD7FFE9" />
                                        <TextBlock Text="{Binding Restore.CompletionMessage}" Foreground="#FFB6F7DC" TextWrapping="Wrap" />
                                        <Button Content="Open Bacpac Folder" Margin="0,8,0,0" HorizontalAlignment="Left" Classes="secondary compact" Command="{Binding Restore.OpenBacpacFolderCommand}" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" CornerRadius="12" Padding="12" BorderBrush="#FF3D5E92" Background="#660F182D">
                                <Grid RowDefinitions="Auto,*" RowSpacing="8">
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
                                        <TextBlock Text="Live Operation Log" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#FFCEE1FF" />
                                        <Button Grid.Column="1" Content="Open Folder" Classes="secondary compact" Command="{Binding Restore.OpenBacpacFolderCommand}" />
                                        <Button Grid.Column="2" Content="Copy" Classes="secondary compact" Command="{Binding Restore.CopyLogsCommand}" />
                                        <Button Grid.Column="3" Content="Clear" Classes="neutral compact" Command="{Binding Restore.ClearLogsCommand}" />
                                    </Grid>
                                    <TextBox Grid.Row="1" Height="260" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Restore.LogOutput}" behaviors:TextBoxAutoScrollBehavior.AutoScrollToEnd="True" />
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>
