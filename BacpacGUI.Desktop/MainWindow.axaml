        <Style Selector="CheckBox.modeToggle">
            <Setter Property="Foreground" Value="#FFEAF1FF" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Border x:Name="ModeToggleBox"
                                Width="18"
                                Height="18"
                                VerticalAlignment="Center"
                                CornerRadius="4"
                                Background="#FF35517F"
                                BorderBrush="#FFC6DEFF"
                                BorderThickness="2">
                            <Path x:Name="ModeToggleCheck"
                                  Data="M 1 6 L 4.5 9.5 L 11 3"
                                  Stroke="#FFF8FCFF"
                                  StrokeThickness="2.2"
                                  IsVisible="False"
                                  Width="12"
                                  Height="12"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                        </Border>
                        <ContentPresenter Grid.Column="1"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}" />
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>
